@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "DoneOrder";
}

<h1>DoneOrder</h1>
<h2>Thanks for you order! </h2>

<div class="d-flex flex-wrap">
    @foreach (var item in Model)
    {
       
           
            <div class="card" style="margin:5px; box-shadow:2px;">
                <div class="card-body form-group" style="font-family: Arial, Helvetica, sans-serif">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item form-group" name="orderdate" >Order Date: @Html.DisplayFor(modelItem => item.OrderDate)</li>

                        <li class="list-group-item" name="orderid">Order ID: @Html.DisplayFor(modelItem => item.Id)</li>

                        <li class="list-group-item" name="total">Order Total: @Html.DisplayFor(modelItem => item.OrderAmount)</li>

                    </ul>

                </div>
            </div>
        
    }
</div>

