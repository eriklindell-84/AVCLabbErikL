@using AVCLabbErikL.Models
@model IEnumerable<ApplicationUsers>
@{
    ViewData["Title"] = "Adress";
}
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (AVCLabbErikL.Controllers.HomeController.adressList.Count > 0 )
            {

                @foreach (ApplicationUsers am in AVCLabbErikL.Controllers.HomeController.adressList)

                {
                    <div class="form-group">
                        <label>Gatuadress</label>
                        <input class="form-control" id="Adress" name="Adress" placeholder="@Html.DisplayFor(modelItem => am.Street)" required>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>c/o</label>
                        <input class="form-control" id="CareOf" name="CareOf" placeholder="@Html.DisplayFor(modelItem => am.CareOf)">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Postnummer</label>
                        <input class="form-control" id="ZipCode" name="ZipCode" placeholder="@Html.DisplayFor(modelItem => am.ZipCode)" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Stad</label>
                        <input class="form-control" id="City" name="City" placeholder="@Html.DisplayFor(modelItem => am.City)" required>
                        <span class="text-danger"></span>
                    </div>
                    <button class="btn-success" type="submit">Update</button>
                }
            }
            else
            {

                <div class="form-group" required>
                    <label>Gatuadress</label>
                    <input class="form-control" id="Adress" name="Adress" required>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>c/o</label>
                    <input class="form-control" id="CareOf" name="CareOf">
                    <span class="text-danger"></span>
                </div>
                <div class="form-group" required>
                    <label>Postnummer</label>
                    <input class="form-control" id="ZipCode" name="ZipCode" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Stad</label>
                    <input class="form-control" id="City" name="City" required />
                    <span class="text-danger"></span>
                </div>
                <button class="btn-success" type="submit">Save</button>
            }

        </form>
    </div>
</div>

